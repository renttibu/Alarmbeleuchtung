{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Funktionen",
      "items": [
        {
          "type": "CheckBox",
          "name": "MaintenanceMode",
          "caption": "Wartungsmodus"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "CheckBox",
          "name": "EnableAlarmLight",
          "caption": "Alarmbeleuchtung"
        },
        {
          "type": "CheckBox",
          "name": "EnableNightMode",
          "caption": "Nachtmodus"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Alarmbeleuchtung",
      "items": [
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Auslöser",
      "items": [
        {
          "type": "List",
          "name": "TriggerVariables",
          "caption": "Auslösende Variablen",
          "rowCount": 5,
          "add": true,
          "delete": true,
          "sort": {
            "column": "ID",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Aktiviert",
              "name": "Use",
              "width": "100px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            },
            {
              "caption": "Auslösende Variable",
              "name": "ID",
              "width": "auto",
              "add": 0,
              "onClick": "AB_EnableTriggerVariableConfigurationButton($id, $TriggerVariables['ID']);",
              "edit": {
                "type": "SelectVariable"
              }
            },
            {
              "caption": "Info",
              "name": "Info",
              "width": "160px",
              "add": "",
              "visible": false,
              "edit": {
                "type": "Button",
                "onClick": "AB_ShowVariableDetails($id, $ID);"
              }
            },
            {
              "caption": "Auslöseart",
              "name": "TriggerType",
              "width": "280px",
              "add": 6,
              "edit": {
                "type": "Select",
                "options": [
                  {
                    "caption": "Bei Änderung",
                    "value": 0
                  },
                  {
                    "caption": "Bei Aktualisierung",
                    "value": 1
                  },
                  {
                    "caption": "Bei Grenzunterschreitung (einmalig)",
                    "value": 2
                  },
                  {
                    "caption": "Bei Grenzunterschreitung (mehrmalig)",
                    "value": 3
                  },
                  {
                    "caption": "Bei Grenzüberschreitung (einmalig)",
                    "value": 4
                  },
                  {
                    "caption": "Bei Grenzüberschreitung (mehrmalig)",
                    "value": 5
                  },
                  {
                    "caption": "Bei bestimmtem Wert (einmalig)",
                    "value": 6
                  },
                  {
                    "caption": "Bei bestimmtem Wert (mehrmalig)",
                    "value": 7
                  }
                ]
              }
            },
            {
              "caption": "Auslösewert",
              "name": "TriggerValue",
              "width": "160px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Aktion",
              "name": "Action",
              "width": "250px",
              "add": 0,
              "edit": {
                "type": "Select",
                "options": [
                  {
                    "caption": "Alarmbeleuchtung ausschalten",
                    "value": 0
                  },
                  {
                    "caption": "Alarmbeleuchtung einschalten",
                    "value": 1
                  },
                  {
                    "caption": "Panikbeleuchtung",
                    "value": 2
                  }
                ]
              }
            }
          ]
        },
        {
          "type": "OpenObjectButton",
          "caption": "Bearbeiten",
          "name": "TriggerVariableConfigurationButton",
          "enabled": false,
          "visible": false,
          "objectID": 0
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Alarmprotokoll",
      "items": [
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Nachtmodus",
      "items": [
        {
          "type": "CheckBox",
          "name": "UseAutomaticNightMode",
          "caption": "Automatischer Nachtmodus"
        },
        {
          "type": "SelectTime",
          "name": "NightModeStartTime",
          "caption": "Startzeit"
        },
        {
          "type": "SelectTime",
          "name": "NightModeEndTime",
          "caption": "Endzeit"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Konfiguration",
      "items": [
        {
          "type": "Button",
          "caption": "Neu einlesen",
          "onClick": "AB_ReloadConfiguration($id);"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectCategory",
              "name": "BackupCategory",
              "caption": "Kategorie",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "Button",
              "caption": "Sichern",
              "onClick": "AB_CreateBackup($id, $BackupCategory);"
            }
          ]
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectScript",
              "name": "ConfigurationScript",
              "caption": "Konfiguration",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "PopupButton",
              "caption": "Wiederherstellen",
              "popup": {
                "caption": "Konfiguration wirklich wiederherstellen?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Wiederherstellen",
                    "onClick": "AB_RestoreConfiguration($id, $ConfigurationScript);"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Registrierte Nachrichten",
      "items": [
        {
          "type": "List",
          "name": "RegisteredMessages",
          "rowCount": 11,
          "sort": {
            "column": "SenderID",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Sender ID",
              "name": "SenderID",
              "width": "150px"
            },
            {
              "caption": "Sender Name",
              "name": "SenderName",
              "width": "auto"
            },
            {
              "caption": "Nachrichten ID",
              "name": "MessageID",
              "width": "150px"
            },
            {
              "caption": "Nachrichten Bezeichnung",
              "name": "MessageDescription",
              "width": "250px"
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Schaltfunktionen",
      "items": [
        {
          "type": "TestCenter"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "Button",
          "caption": "Panikbeleuchtung einschalten",
          "onClick": "AB_TriggerAlarmLight($id);"
        }
      ]
    }
  ]
}